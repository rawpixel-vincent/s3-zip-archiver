{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "."
  },
  "include": ["index.mjs"],
  "exclude": ["node_modules"]
}
